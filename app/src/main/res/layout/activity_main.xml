<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/single_base_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Base Adapter" />

    <Button
        android:id="@+id/common_base_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Common Base Adapter" />

    <Button
        android:id="@+id/single_recycler_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single RecyclerView Adapter" />

    <Button
        android:id="@+id/common_recycler_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Common RecyclerView Adapter" />
</LinearLayout>
