<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.junhua.android.commonadapter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.One2ManyActivity"
            android:label="@string/one2many"
            android:launchMode="singleTop" />

        <activity
            android:name=".activity.TaobaoActivity"
            android:label="@string/taobao"
            android:launchMode="singleTop" />

        <activity
            android:name=".activity.BasisActivity"
            android:label="@string/basis"
            android:launchMode="singleTop" />
    </application>

</manifest>